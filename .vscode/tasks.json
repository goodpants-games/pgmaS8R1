{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build assets",
            "type": "process",
            "command": "python",
            "args": ["tools/assetexport.py"],
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },

            "windows": {
                "options": {
                    "env": {
                        "TILED": "C:\\Program Files\\Tiled\\tiled.exe"
                    }
                }
            }
        }
    ]
}